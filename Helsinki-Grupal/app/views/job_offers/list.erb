<h1>Current Job Offers</h1>
<div class="search-box">
  <form method="POST" action="search" class="form-search">
    <%= csrf_token_field %>
    <input type="text" name="q"/>
    <input type="submit" value="search" id="search-button" class="btn btn-primary"/>
  </form>
</div>

<table class="table table-bordered">
  <tr>
    <th>Title</th>
    <th>Location</th>
    <th>Experience (years)</th>
    <th>Salary (ARS)</th>
    <th>Description</th>
    <th>Actions</th>
  </tr>
  <% @offers.each do |offer| %>
    <tr>
      <td>
        <%= offer.title %>
      </td>
      <td>
        <%= offer.location %>
      </td>
      <td width="15%">
        <%=
          if offer.experience_is_default?
            'Not Specified'
          else
            offer.experience
          end
        %>
      </td>
      <td width="11%">
        <%=
          if offer.salary_is_default?
            'Not Specified'
          else
            offer.salary
          end
        %>
      </td>
      <td>
        <%= offer.description %>
      </td>
      <td>
        <% if offer.is_active %>
          <%= link_to 'Apply', url_for(:job_offers, :apply, :offer_id => offer.id), :class => "btn btn-primary" %>
        <% end %>
      </td>
    </tr>
  <% end %>

</table>